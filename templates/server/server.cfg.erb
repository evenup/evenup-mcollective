# Fine managed by puppet - do not modify

topicprefix = /topic/
main_collective = mcollective
collectives = mcollective
libdir = <%= scope.lookupvar('mcollective::libdir') %>
logfile = /var/log/mcollective.log
loglevel = info
daemonize = 1
registerinterval = 120

# Plugins 
securityprovider = psk
plugin.psk = <%= scope.lookupvar('mcollective::psk') %>
direct_addressing = 1

connector = activemq
plugin.activemq.pool.size = 1
plugin.activemq.pool.1.host = <%= scope.lookupvar('mcollective::stomp_host') %>
plugin.activemq.pool.1.port = <%= scope.lookupvar('mcollective::stomp_port') %>
plugin.activemq.pool.1.user = <%= scope.lookupvar('mcollective::stomp_user') %>
plugin.activemq.pool.1.password = <%= scope.lookupvar('mcollective::stomp_password') %>

# Facts
factsource = yaml
plugin.yaml = /etc/mcollective/facts.yaml

# Registration (can be used for keepalive)
registerinterval = 300
registration = Agentlist
